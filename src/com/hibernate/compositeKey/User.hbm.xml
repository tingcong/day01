<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.hibernate.compositeKey" auto-import="true">
    <class name="User">
        <!-- 复合主键映射 -->
        <composite-id name="keys">
            <key-property name="userName" type="java.lang.String"></key-property>
            <key-property name="address" type="java.lang.String"></key-property>
        </composite-id>

        <property name="age" type="int"></property>
    </class>
</hibernate-mapping>